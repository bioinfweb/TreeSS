<?xml version="1.0" encoding="UTF-8"?>
<treeSSLangDefition type="pseudoclass" xmlns="http://bioinfweb.info/xmlns/TreeSS/languageDefinition">
	<description>Psuedo-class the select the root node or branch of a tree.</description>
	<firstVersion>0.2</firstVersion>

	<validSelectors>node branch</validSelectors>
	<implementations>
		<implementation language="Java">
			<class>info.bioinfweb.jtreess.execute.implementation.selectorpseudofunction.RootPseudoselectorImplementation</class>
		</implementation>
	</implementations>

	<example>
		<code>
			branch:root {
				color: green;
			}
		</code>
		<description>Sets the line color of the branch leading to the root to green. ("branch:nth-level(0)" would be an equivalent expression.)</description>
	</example>
</treeSSLangDefition>