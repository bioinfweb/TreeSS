<?xml version="1.0" encoding="UTF-8"?>
<treeSSLangDefition xmlns="http://bioinfweb.info/xmlns/TreeSS/languageDefinition" type="property">
	<description>Sets the color of text decoration lines.</description>
	<firstVersion>0.2</firstVersion>

	<parameterList>
		<parameter>COLOR</parameter>
	</parameterList>
	
	<validSelectors>node scale</validSelectors>

	<example>
		<code>
			node {
				text-decoration-line: underline;
				text-decoration-color: red;
			}
		</code>
		<description>Sets the text of all nodes to be underlined in red.</description>
	</example>
</treeSSLangDefition>