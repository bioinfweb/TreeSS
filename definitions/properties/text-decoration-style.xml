<?xml version="1.0" encoding="UTF-8"?>
<treeSSLangDefition xmlns="http://bioinfweb.info/xmlns/TreeSS/languageDefinition" type="property">
	<description>Sets the line style of a text decoration.</description>
	<firstVersion>0.2</firstVersion>

	<parameterList>
		<parameter>TextDecorationStyle</parameter>
	</parameterList>
	
	<validSelectors>node scale</validSelectors>

	<example>
		<code>
			node {
				text-decoration-line: underline;
				text-decoration-style: double;
			}
		</code>
		<description>Sets the text of all nodes to be double underlined.</description>
	</example>
</treeSSLangDefition>